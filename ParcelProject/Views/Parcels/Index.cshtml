<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Postal Service</title>
    <link 
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" 
      rel="stylesheet" 
      integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" 
      crossorigin="anonymous">
  </head>
<body>
    @using ParcelProject.Models;

    <h1>Parcel List</h1>

    @if (Model.Count == 0)
    {
      <p>There are no parcels in the list.</p>
    }
    <ul>
      @foreach (Parcel parcel in Model)
      {
        <li>@parcel.GetVolume(), @parcel.GetCostToShip()</li>
      }
    </ul>
    <a href="/parcels/new">Add a new parcel.</a>
    <br>
    <a href="/parcels">See list of parcels</a>
  </body>
</html>